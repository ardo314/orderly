package ardo:orderly;

interface core {

    resource game {
        constructor(piece-count: u32);

        pieces: func() -> list<u32>;
        is-over: func() -> bool;
        tries: func() -> u32;
        correct-pieces-count: func() -> u32;

        play: func(a: u32, b: u32);
    }

    shuffled-list: func(length: u32) -> list<u32>;
}

world orderly {
    export core;
}
